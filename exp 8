#include <stdio.h>

struct Process {
    int pid;           
    int arrivalTime;    
    int burstTime;     
    int remainingTime;
    int waitingTime;
    int turnaroundTime;
    int completionTime;
};

int main() {
    int n, quantum;
    float avgWT = 0, avgTAT = 0;
    
    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];
    
    for (int i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("\nEnter arrival time for process %d: ", p[i].pid);
        scanf("%d", &p[i].arrivalTime);
        printf("Enter burst time for process %d: ", p[i].pid);
        scanf("%d", &p[i].burstTime);
        p[i].remainingTime = p[i].burstTime;
    }
    
    printf("\nEnter time quantum: ");
    scanf("%d", &quantum);

    int completed = 0, currentTime = 0;
    int done[n];  // Keeps track of whether process is completed
    for (int i = 0; i < n; i++) done[i] = 0;

    printf("\nGantt Chart:\n");

    while (completed != n) {
        int processExecuted = 0;

        for (int i = 0; i < n; i++) {
            if (p[i].arrivalTime <= currentTime && p[i].remainingTime > 0) {
                processExecuted = 1;

                printf("| P%d ", p[i].pid);

                if (p[i].remainingTime > quantum) {
                    currentTime += quantum;
                    p[i].remainingTime -= quantum;
                } else {
                    currentTime += p[i].remainingTime;
                    p[i].remainingTime = 0;
                    p[i].completionTime = currentTime;
                    p[i].turnaroundTime = p[i].completionTime - p[i].arrivalTime;
                    p[i].waitingTime = p[i].turnaroundTime - p[i].burstTime;
                    avgWT += p[i].waitingTime;
                    avgTAT += p[i].turnaroundTime;
                    completed++;
                    done[i] = 1;
                }
            }
        }

        // If no process is ready, advance time
        if (!processExecuted)
            currentTime++;
    }

    printf("|\n");

    avgWT /= n;
    avgTAT /= n;

    printf("\nProcess\tArrival\tBurst\tWaiting\tTurnaround\n");
    for (int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n",
               p[i].pid,
               p[i].arrivalTime,
               p[i].burstTime,
               p[i].waitingTime,
               p[i].turnaroundTime);
    }

    printf("\nAverage Waiting Time: %.2f", avgWT);
    printf("\nAverage Turnaround Time: %.2f\n", avgTAT);

    return 0;
}
