#include <stdio.h>

struct Process {
    int pid;            // Process ID
    int arrivalTime;    // Arrival Time
    int burstTime;      // Burst Time
    int waitingTime;    // Waiting Time
    int turnaroundTime; // Turnaround Time
    int completionTime; // Completion Time
    int done;           // Flag to check if process is completed
};

int main() {
    int n, completed = 0, currentTime = 0;
    float avgWT = 0, avgTAT = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    // Input process details
    for (int i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("\nEnter arrival time for process %d: ", p[i].pid);
        scanf("%d", &p[i].arrivalTime);
        printf("Enter burst time for process %d: ", p[i].pid);
        scanf("%d", &p[i].burstTime);
        p[i].done = 0;
    }

    printf("\nGantt Chart:\n");

    while (completed != n) {
        int idx = -1;
        int minBurst = 9999;

        // Select process with shortest burst time among arrived ones
        for (int i = 0; i < n; i++) {
            if (p[i].arrivalTime <= currentTime && p[i].done == 0) {
                if (p[i].burstTime < minBurst) {
                    minBurst = p[i].burstTime;
                    idx = i;
                }
            }
        }

        if (idx != -1) {
            printf("| P%d ", p[idx].pid);
            currentTime += p[idx].burstTime;
            p[idx].completionTime = currentTime;
            p[idx].turnaroundTime = p[idx].completionTime - p[idx].arrivalTime;
            p[idx].waitingTime = p[idx].turnaroundTime - p[idx].burstTime;
            p[idx].done = 1;
            completed++;
        } else {
            currentTime++; // If no process has arrived yet
        }
    }

    printf("|\n\nProcess\tArrival\tBurst\tWaiting\tTurnaround\n");
    for (int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n",
               p[i].pid,
               p[i].arrivalTime,
               p[i].burstTime,
               p[i].waitingTime,
               p[i].turnaroundTime);
        avgWT += p[i].waitingTime;
        avgTAT += p[i].turnaroundTime;
    }

    avgWT /= n;
    avgTAT /= n;

    printf("\nAverage Waiting Time: %.2f", avgWT);
    printf("\nAverage Turnaround Time: %.2f\n", avgTAT);

    return 0;
}
